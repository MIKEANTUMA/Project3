<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hardlevel3"
    tools:context=".levels.hardLevel3">


    <Button
        android:id="@+id/drop_one"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 1 "
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/drop_two"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 2 "
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/drop_three"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 3 "
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/drop_four"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 4 "
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/drop_five"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 5 "
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/play"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_margin="5dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#00f"
        android:text=" Go "
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="4"
        android:visibility="gone" />

    <Button
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="5"
        android:visibility="gone" />

    <Button
        android:layout_width="50dp"
        android:layout_height="57dp"
        android:layout_row="0"
        android:layout_column="6"
        android:visibility="gone" />


    <Button
        android:id="@+id/btn_left"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_row="0"
        android:layout_column="8"
        android:background="@drawable/arrowleft"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_down"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_row="0"
        android:layout_column="9"
        android:background="@drawable/arrowdown"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_up"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_row="0"
        android:layout_column="10"
        android:background="@drawable/arrowup"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_row="0"
        android:layout_column="11"
        android:background="@drawable/arrowright"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/drop_six"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 6 "
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/drop_seven"
        android:layout_width="50dp"
        android:layout_height="57dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:backgroundTint="#ff0000"
        android:text=" 7 "
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/ball"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="70dp"
        android:src="@drawable/ball"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="182dp" />

</GridLayout>